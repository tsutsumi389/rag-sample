# RAG CLI Application - Environment Configuration Sample
# Copy this file to .env and modify as needed

# Ollama Configuration
# ====================
# Base URL for Ollama API endpoint
OLLAMA_BASE_URL=http://localhost:11434

# Model for text generation (LLM)
# Available models: gpt-oss, llama3.2, llama2, mistral, etc.
# Run 'ollama list' to see installed models
OLLAMA_LLM_MODEL=gpt-oss

# Model for generating embeddings
# Recommended: nomic-embed-text (lightweight and efficient)
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Multimodal Configuration (Vision and Image Processing)
# ========================================================
# Model for multimodal LLM (text + image understanding)
# Available models: gemma3, llava, bakllava, etc.
# Run 'ollama pull gemma3' to install
OLLAMA_MULTIMODAL_LLM_MODEL=gemma3

# Model for vision embeddings and image captioning
# Recommended: llava (general purpose), bakllava (higher accuracy)
# Run 'ollama pull llava' to install
OLLAMA_VISION_MODEL=llava

# Image Processing Settings
# Auto-generate captions when adding images
IMAGE_CAPTION_AUTO_GENERATE=true

# Maximum image file size in MB
MAX_IMAGE_SIZE_MB=10

# Enable image resizing for large images
IMAGE_RESIZE_ENABLED=false

# Maximum dimensions for resized images
IMAGE_RESIZE_MAX_WIDTH=1024
IMAGE_RESIZE_MAX_HEIGHT=1024

# Multimodal Search Settings
# Weight for text search results (0.0-1.0)
MULTIMODAL_SEARCH_TEXT_WEIGHT=0.5

# Weight for image search results (0.0-1.0)
MULTIMODAL_SEARCH_IMAGE_WEIGHT=0.5

# ChromaDB Configuration
# ======================
# Directory path for ChromaDB persistent storage
# Can be absolute or relative path
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Document Processing Configuration
# ==================================
# Size of text chunks (in characters)
# Range: 100-10000, recommended: 500-2000
CHUNK_SIZE=1000

# Overlap between consecutive chunks (in characters)
# Must be less than CHUNK_SIZE
# Higher overlap = better context continuity, but more storage
CHUNK_OVERLAP=200

# Logging Configuration
# =====================
# Log level for application output
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
